int N = 5;
int M = 5;

int findMaxWeight(int array, int line, int col, int num){
	if (line == num){
		return 0;
	} 
	if (line == num - 1){
		//we reached the last line
		int w1 = array[line][col];
		int w2 = array[line][col+1]
		return MAX(w1,w2);
	}
	
	
	
	
	
	
	
	
	
	
	
	
